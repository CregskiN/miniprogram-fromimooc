/* components/episode/index.wxss */
page {
  padding: 0;
  margin: 0;
}

.container {
  padding-left: 5rpx;
  height: 60rpx;
  display: inline-flex;
  flex-direction: row;
}

.index_container {
  display: flex;
  flex-direction: row;
  align-items: baseline;
}

.plain {
  font-size: 32rpx;
  font-weight: 400;
}

.index {
  font-size: 60rpx;
  line-height: 60rpx;
  font-weight: 800;
  margin-right: 14rpx;

}

.line {
  height: 44rpx;
  margin-right: 14rpx;
  margin-bottom: 2rpx;
  border-left: 1px solid black;
}


.data-container {
  display:flex;
  flex-direction: column;
  align-items:center;
  margin-top:10rpx;
  height:60rpx;
}

.month {
  font-size:24rpx;
  line-height:24rpx;

}

.year {
  font-size:20rpx;
}